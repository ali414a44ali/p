def get_scrolling_text(text, position, width=20):
    if len(text) <= width:
        spaces = (width - len(text)) // 2
        return " " * spaces + text + " " * spaces
    else:
        extended_text = text + " " * width
        start = position % (len(text) + width)
        return extended_text[start:start+width]

